{
  "name": "functions",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 tsc",
    "serve": "npm run build && firebase emulators:start --only functions,auth,database,firestore",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "fetch-questions": "npx ts-node scripts/fetch-questions.ts",
    "fetch-questions:stats": "npx ts-node scripts/fetch-questions.ts --stats",
    "fetch-questions:prod": "npx ts-node scripts/fetch-questions.ts --production",
    "delete-questions": "npx ts-node scripts/delete-questions.ts",
    "delete-questions:prod": "npx ts-node scripts/delete-questions.ts --production",
    "delete-questions:prod:force": "npx ts-node scripts/delete-questions.ts --production --force",
    "test-generation": "npx ts-node scripts/test-generation.ts",
    "test-generation:verbose": "npx ts-node scripts/test-generation.ts --verbose"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@genkit-ai/firebase": "^1.21.0",
    "@genkit-ai/googleai": "^1.8.0",
    "@google-cloud/pubsub": "^5.2.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.2",
    "genkit": "^1.21.0",
    "html-to-text": "^9.0.5",
    "mailgun.js": "^12.1.1",
    "stripe": "^14.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "@types/needle": "^3.3.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
