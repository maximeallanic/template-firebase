{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        "players": {
          "$playerId": {
            ".validate": "newData.hasChildren(['id', 'name', 'avatar', 'isHost', 'score', 'joinedAt', 'isOnline'])"
          }
        },
        "state": {
          ".validate": "newData.hasChild('status') && newData.hasChild('phaseState')"
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
