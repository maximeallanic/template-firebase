{
  "name": "firebase-react-saas-template",
  "description": "Production-ready Firebase + React SaaS template with Stripe, i18n, and AI analysis",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "optimize:images": "node scripts/optimize-images.js",
    "prebuild": "npm run optimize:images",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "type-check": "tsc -b --noEmit",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "cd functions && npm run build && cd .. && firebase deploy --only functions",
    "emulators": "firebase emulators:start --import=.emulator-data --export-on-exit=.emulator-data",
    "emulators:clean": "firebase emulators:start",
    "start": "./scripts/start-dev.sh",
    "start:clean": "concurrently --raw \"npm run dev\" \"npm run emulators:clean\"",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@stripe/stripe-js": "^8.0.0",
    "dotenv": "^17.2.3",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.5.0",
    "framer-motion": "^12.23.26",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.561.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.0.1",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
